<?xml version="1.0" encoding="utf-8"?>
<databaseChangeLog
    xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.9.xsd">

    <changeSet id="20260216120000-1" author="opencode">
        <addColumn tableName="member">
            <column name="telegram_id" type="BIGINT">
                <constraints unique="true"/>
            </column>
        </addColumn>
    </changeSet>

    <changeSet id="20260216120000-2" author="opencode">
        <createTable tableName="pending_link">
            <column name="id" type="BIGINT">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="member_id" type="BIGINT">
                <constraints nullable="false"/>
            </column>
            <column name="code" type="VARCHAR(255)">
                <constraints nullable="false" unique="true"/>
            </column>
            <column name="created_at" type="datetime">
                <constraints nullable="false"/>
            </column>
            <column name="expires_at" type="datetime">
                <constraints nullable="false"/>
            </column>
            <column name="used" type="boolean" defaultValueBoolean="false">
                <constraints nullable="false"/>
            </column>
        </createTable>

        <addForeignKeyConstraint baseColumnNames="member_id"
                                 baseTableName="pending_link"
                                 constraintName="fk_pending_link_member_id"
                                 referencedColumnNames="id"
                                 referencedTableName="member"/>
    </changeSet>

    <changeSet id="20260216120000-3" author="opencode">
        <createTable tableName="polling_state">
            <column name="id" type="BIGINT">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="last_update_id" type="BIGINT">
                <constraints nullable="true"/>
            </column>
        </createTable>
    </changeSet>

</databaseChangeLog>
